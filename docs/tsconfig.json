{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "vite-plugin-pwa/client",
      "vitepress"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "./.vitepress/**/*.ts",
    "./.vitepress/**/*.vue"
  ],
  "exclude": ["dist", "node_modules"]
}
